@model SCM.Models.RequestsProductModifier

@{
    ViewBag.Title = AppViews.RequestsProductMod;
}

<h2>@AppViews.RequestsProductMod</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            @Html.LabelFor(model => model.DepartmentId, AppViews.Department, htmlAttributes: new { @class = "control-label col-md-4" })
            <div class="col-md-8">
                @Html.DropDownList("DepartmentId", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.DepartmentId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ProductId1, AppViews.RequestsProductMod_ProductId1, htmlAttributes: new { @class = "control-label col-md-4" })
            <div class="col-md-8">
                @Html.DropDownList("ProductId1", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.ProductId1, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ProductId2, AppViews.RequestsProductMod_ProductId2, htmlAttributes: new { @class = "control-label col-md-4" })
            <div class="col-md-8">
                @Html.DropDownList("ProductId2", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.ProductId2, "", new { @class = "text-danger" })
            </div>
        </div>


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="@AppViews.RequestsProductMod_Update" class="btn btn-default" />
            </div>
        </div>
    </div>
}



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

    <script>
        $(function () {
            $("#DepartmentId").change(function (e) {

                var id = $("#DepartmentId").val();
                var url2 = '@Url.Action("GetProducts", "ServiceRequests")';
                
               
                $("#ProductId1").empty();
                $("#ProductId2").empty();

                //$.ajax({
                //    contentType: 'application/json',
                //    method: 'GET',
                //    url: url1,
                //    data: { departmentId: id },
                //    success: function (result) {
                //        if (result != null && result.length > 0) {

                //            var html = '<option selected="true" value=""></option>';
                //            for (var i = 0; i < result.length; i++) {
                //                var str = '<option value="' + result[i].Id + '">' + result[i].Name + '</option>';
                //                html = html + str;
                //            }
                //            $("#EngineerId").html(html);
                //        }
                //    }
                //});

                $.ajax({
                    contentType: 'application/json',
                    method: 'GET',
                    url: url2,
                    data: { departmentId: id },
                    success: function (result) {
                        if (result != null && result.length > 0) {

                            var html = '';
                            for (var i = 0; i < result.length; i++) {
                                var str = '<option value="' + result[i].Id + '">' + result[i].Name + '</option>';
                                html = html + str;
                            }
                            $("#ProductId1").html(html);
                            $("#ProductId2").html(html);
                        }
                    }
                });


            });

        });
    </script>
}
