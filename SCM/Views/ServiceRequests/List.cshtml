@model PagedList.IPagedList<SCM.ServiceRequest>
@using PagedList.Mvc

<div class="table-responsive">
    <table class="table table-hover table-striped">
        <thead>
            <tr>
                <th></th>
                <th>
                    <a class="sorter" data-sort="Customer.Name" href="#">
                        @Html.DisplayNameFor(model => model.FirstOrDefault().CustomerId)
                    </a>
                </th>
                <th>
                    <a class="sorter" data-sort="RequestDate" href="#">
                        @Html.DisplayNameFor(model => model.FirstOrDefault().RequestDate)
                    </a>
                </th>
                <th>
                    <a class="sorter" data-sort="StatusId" href="#">
                        @Html.DisplayNameFor(model => model.FirstOrDefault().StatusId)
                    </a>
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <a href='@Url.Action("Edit", new { id = item.Id})'><span class="glyphicon glyphicon-edit"></span></a>
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Customer.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.RequestDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.StatusId)
                    </td>
                    <td>
                        <a href='@Url.Action("Delete", new { id = item.Id })'><span class="glyphicon glyphicon-trash"></span></a>
                    </td>
                </tr>
            }
        </tbody>

    </table>
    Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount

    @Html.PagedListPager(Model, page => string.Format("javascript: callRequests('{0}')", page))
</div>
